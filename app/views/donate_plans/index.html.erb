<div class="container">
	<h1>Donation plans</h1>
	<% if @donate_plans.blank? %>
		<h2>You don't have any plans now.</h2>
						
	<% else %>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Project Title</th>
					<th>Charged to you($)</th>
					<th>Fee($)</th>
					<th>Donation Amount($)</th>
					<th>Action</th>
				</tr>	
			</thead>			
			<tbody>
			<% @donate_plans.each do |plan| %>		
				<tr id="plan_<%= plan.id %>">
					<td><a href="#"><%= plan.project_title %></a></td>
					<td><%= plan.amount.round(2) %></td>
					<td><%= plan.setup_amount.round(2) %></td>
					<td>0.30</td>
					<td>
						<a class="btn btn-primary" href="/donate_plans/project/<%= plan.project_id %>" value="Edit">Edit</a>
						<a class="btn" href="/donates/plan/<%= plan.id %>" id="project_<%= plan.project_id %>">Go Donate Page</a>
						<a class="btn btn-primary" href="/donate_plans/delete/<%= plan.id %>">Delete</a>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	<% end %>
</div>
	
