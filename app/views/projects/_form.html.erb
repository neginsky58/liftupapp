<%= simple_form_for(@project, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

  <br /><br />

  <%= f.input :projecttitle, label: "Project Title", :input_html => {:maxlength => 50, :style=> 'width: 300px'} %>
  
  <%= f.input :category_id, collection: Category.all(order: 'name'), :label_method => :name, :prompt => 'Select a Category', :input_html => {:style=> 'width: 312px'} %>
  
  <%= f.input :projectlocation_id, collection: Projectlocation.all(order: 'location'), :label_method => :location, :prompt => 'Select a Location', label: "Project Location", :input_html => {:style=> 'width: 312px'} %>

  <%= f.input :projectshortdesc, label: "Short Description", as: :text, :input_html => {:maxlength => 150, :rows => 4, :style=> 'width: 300px'} %>

  <span class="countdown"></span>

  <div class="staticheaderspacing"></div>
  <hr>
  <div class="staticheaderspacing"></div>

  <div class="formindent">
    <%= image_tag @project.projectimage_url(:indexview).to_s %>
  </div>

  <%= f.input :projectimage, :label => "Upload New Picture" %>
  <%= f.input :remote_projectimage_url, :label => "Or image URL", :input_html => {:style=> 'width: 300px'} %>

  <div class="staticheaderspacing"></div>
  <hr>
  <div class="staticheaderspacing"></div>


  <%= f.input :projectletter, label: "Prayer Letter", input_html: { class: 'redactor', rows: '10' } %>
  
  <%= f.input :goal, label: "Project Goal ( > $500 )" %>
  <%= f.input :funding_period , label: "Funding Period (days)" %>

  <%= f.input :youtubelink, label: "Video URL (Youtube or Vimeo)", :input_html => {:style=> 'width: 300px'} %>
  <%= f.input :projectletter, label: "Prayer Letter", :input_html => {:class => 'redactor', :rows => 10} %>


  <div class="form-actions">
    <%= f.submit "Save Project Proposal", class: "btn btn-danger" %>
    &nbsp;
    

    <br /><br />
    *Before continuing, please save project. 
    <br /><br />
    
    <%= link_to "Preview Project", @project, class: "btn btn-success", data: { confirm: 'Did you save yet?' } %>

    <br /><br />
    *To preview, please save project first to ensure no changes are lost.
  </div>
<% end %>
